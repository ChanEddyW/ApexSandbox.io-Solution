public Boolean isSubSequence(String s1, String s2){
    Integer i = 0;

    while (
        s1.length() != s2.length() 
        && i < s1.length()
    ) {
        String s2Character = s2.substring(i, i + 1);

        if (s1.substring(i, i + 1) == s2Character) {
            i++;
        } else {
            s2 = s2.replaceFirst(s2Character, '');
        }
    }

    if (s1.length() != s2.length()) {
        s2 = s2.substring(0, s1.length());
    }

    return s1 == s2;
}