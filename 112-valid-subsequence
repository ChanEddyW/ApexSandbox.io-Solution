public Boolean isSubSequence(String s1, String s2){
    String strToCompare = '';
    Integer i = 0;
    Integer j = 0;

    while (
        i < s1.length() 
        && j < s2.length() 
        && s1 != strToCompare
    ) {
        if (s1.substring(i, i + 1) == s2.substring(j, j + 1)) {
            strToCompare += s2.substring(j, j + 1);

            i++;
            j++;
        } else {
            j++;
        }
    }

    return s1 == strToCompare;
}