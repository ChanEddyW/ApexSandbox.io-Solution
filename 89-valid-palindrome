public Boolean isPalindrome(String str){
    String regExp = '[\\W]+';
    String replacement = '';

    str = str.toLowerCase().replaceAll(regExp, replacement);

    for (Integer i = 0, j = str.length() - 1; i < j; i++) {
        if (str.charAt(i) == str.charAt(j)) {
            j--;
        } else {
            return false;
        }
    }

    return true;
}