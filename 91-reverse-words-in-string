public static String reverseWords(String str){
    List<String> characters = new List<String>();

    for (String word : str.split(' ')) {
        characters.add(
            getOneReverseWordCharacters(word)
        );
    }

    return String.join(characters, ' ');
}

public String getOneReverseWordCharacters(String s) {
    List<Integer> oldCharacters = s.getChars();
    List<Integer> newCharacters = new List<Integer>();

    for(Integer i = oldCharacters.size() - 1; i >= 0; i--)
        newCharacters.add(oldCharacters[i]);

    return String.fromCharArray(newCharacters);
}