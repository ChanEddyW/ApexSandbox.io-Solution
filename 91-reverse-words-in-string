public static String reverseWords(String str){
    List<Integer> oldCharacters = str.getChars();
    List<Integer> newCharacters = new List<Integer>();

    for (Integer i = 0, j = 0; i < oldCharacters.size(); i++) {
        if (oldCharacters[i] == 32) {
            Integer k = i - 1;

            newCharacters.addAll(
                getOneReverseWordCharacters(oldCharacters, j, k)
            );

            newCharacters.add(32);

            j = i + 1;
        } else if (i == oldCharacters.size() - 1) {
            Integer k = i;

            newCharacters.addAll(
                getOneReverseWordCharacters(oldCharacters, j, k)
            );
        }
    }

    str = String.fromCharArray(newCharacters);

    return str;
}

private List<Integer> getOneReverseWordCharacters(
    List<Integer> oldCharacters, 
    Integer j, 
    Integer k
) {
    List<Integer> newCharacters = new List<Integer>();

    while (j <= k) {
        newCharacters.add(oldCharacters[k]);

        k--;
    }

    return newCharacters;
}