public boolean isAnagram(String s1, String s2) {
    if (s1 != null && s2 != null) {
        s1 = sortCharacters(s1);
        s2 = sortCharacters(s2);

        return s1 == s2;
    } else {
        return false;
    }
}

private String sortCharacters(String word) {
    List<Integer> characters = word.getChars();

    characters.sort();

    return String.fromCharArray(characters);
}