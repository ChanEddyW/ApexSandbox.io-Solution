public Boolean isBirthday(Contact c) {
    Boolean isBirthdayToday;

    if (
        c.Birthdate.month() == Date.today().month() 
        && c.Birthdate.day() == Date.today().day()
    ) {
        isBirthdayToday = true;
    } else {
        isBirthdayToday = false;
    }

    return isBirthdayToday;
}